<div class="container text-center" >
  <div class="card text-center mb-5 pt-5">
    <h1><%= @restaurant.name %></h1>
    <p><%= @restaurant.address %></p>
    <p><%= @restaurant.phone_number %></p>
    <p><%= @restaurant.category.capitalize %></p>
  </div>

  <p><strong>Reviews</strong></p>
  <ul class="list-group mt-5">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item p-3"><%= '⭐️' * review.rating %> <br>
      <%= review.content %>
      </li>
    <% end %>
  </ul>
  <br>

  <%= link_to 'Back', restaurants_path, class:"btn btn-primary" %>
  <%= link_to 'Leave a review', new_restaurant_review_path(@restaurant, @review), class:"btn btn-primary" %>
</div>
